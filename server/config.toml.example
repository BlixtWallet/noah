# Server host address
# Default: "0.0.0.0"
host = "0.0.0.0"

# Public API server port
# Default: 3000
port = 3000

# Private API server port (health checks, internal endpoints)
# Default: 3099
private_port = 3099

# LNURL domain for Lightning Address
# Default: "localhost"
lnurl_domain = "localhost"

# Turso database connection URL
turso_url = "libsql://your-database.turso.io"

# Turso database API key
turso_api_key = "your-turso-api-key"

# Expo push notification access token
expo_access_token = "your-expo-access-token"

# Ark server URL for layer-2 connections
ark_server_url = "http://localhost:8080"

# Bitcoin network: "bitcoin", "signet", "regtest"
# Default: "regtest"
server_network = "regtest"

# Sentry URL for error tracking (optional)
# Uncomment to enable Sentry
# sentry_url = "https://your-sentry-dsn@sentry.io/project-id"

# Backup cron schedule
# Default: "every 2 hours"
backup_cron = "every 2 hours"

# Heartbeat cron schedule
# Default: "every 1 hour"
heartbeat_cron = "every 1 hour"

# Deregistration cron schedule
# Default: "every 24 hours"
deregistration_cron = "every 24 hours"

# Maintenance interval rounds (how often to send maintenance notifications)
# Default: 1
maintenance_interval_rounds = 1

# S3 bucket name for backups
s3_bucket_name = "your-s3-bucket-name"

# AWS credentials for S3 access (optional - can use environment variables instead)
# If not provided, the AWS SDK will look for credentials in the default locations
# (environment variables, credentials file, IAM role, etc.)
# aws_access_key_id = "your-aws-access-key-id"
# aws_secret_access_key = "your-aws-secret-access-key"
# aws_region = "us-east-2"
