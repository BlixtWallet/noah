{
  "name": "noah",
  "version": "0.1.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "start:signet": "APP_VARIANT=signet expo start",
    "start:regtest": "APP_VARIANT=regtest expo start",
    "start:mainnet": "APP_VARIANT=mainnet expo start",
    "android:signet": "APP_VARIANT=signet expo run:android --variant signetDebug",
    "android:regtest": "APP_VARIANT=regtest expo run:android --variant regtestDebug",
    "android:mainnet": "APP_VARIANT=mainnet expo run:android --variant mainnetDebug",
    "ios:mainnet:debug": "APP_VARIANT=mainnet expo run:ios --scheme Noah --configuration Debug",
    "ios:regtest:debug": "APP_VARIANT=regtest expo run:ios --scheme Noah-Regtest --configuration Debug",
    "ios:signet:debug": "APP_VARIANT=signet expo run:ios --scheme Noah-Signet --configuration Debug",
    "ios:mainnet:release": "APP_VARIANT=mainnet expo run:ios --scheme Noah --configuration Release",
    "ios:regtest:release": "APP_VARIANT=regtest expo run:ios --scheme Noah-Regtest --configuration Release",
    "ios:signet:release": "APP_VARIANT=signet expo run:ios --scheme Noah-Signet --configuration Release",
    "postinstall": "bun scripts/download_ark_binaries.js",
    "prebuild:signet": "APP_VARIANT=signet expo prebuild --clean",
    "prebuild:regtest": "APP_VARIANT=regtest expo prebuild --clean",
    "prebuild:mainnet": "APP_VARIANT=mainnet expo prebuild --clean",
    "build:android:signet:release": "cd android && ./gradlew assembleSignetRelease",
    "build:android:regtest:release": "cd android && ./gradlew assembleRegtestRelease",
    "build:android:mainnet:release": "cd android && ./gradlew assembleMainnetRelease",
    "build:android:signet:debug": "cd android && ./gradlew assembleSignetDebug",
    "build:android:regtest:debug": "cd android && ./gradlew assembleRegtestDebug",
    "build:android:mainnet:debug": "cd android && ./gradlew assembleMainnetDebug",
    "web": "expo start --web"
  },
  "dependencies": {
    "@bottom-tabs/react-navigation": "^0.9.2",
    "@dr.pogodin/react-native-fs": "^2.33.1",
    "@react-native-vector-icons/get-image": "^12.0.1",
    "@react-native-vector-icons/ionicons": "^12.0.1",
    "@react-navigation/native": "^7.1.14",
    "@tanstack/react-query": "^5.81.2",
    "expo": "~53.0.12",
    "expo-build-properties": "~0.14.6",
    "expo-constants": "^17.1.6",
    "expo-status-bar": "~2.2.3",
    "nativewind": "^4.1.23",
    "react": "19.0.0",
    "react-native": "0.79.4",
    "react-native-bottom-tabs": "^0.9.2",
    "react-native-edge-to-edge": "^1.6.1",
    "react-native-mmkv": "^3.3.0",
    "react-native-nitro-ark": "^0.0.12",
    "react-native-nitro-modules": "^0.26.2",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/react": "~19.0.10",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3"
  },
  "private": true
}
